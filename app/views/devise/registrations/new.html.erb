<div class="register-photo" style="background-color:#f5f5f5;">
  <div class="form-container">
    <div class="image-holder" style="background-image:url(/assets/mech.jpg);background-size:cover;height:500px;"></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="text-center"><strong>Criar</strong>&nbsp;uma conta.</h2>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "Nome", required: true %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email", required: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", required: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Confirmação de Senha", required: true %>
      </div>
      <div class="form-group">
        <div class="checkbox"><label class="control-label"><%= f.check_box :mechanical %>Registrar como prestador de serviço</label></div>
      </div>
      <!--APARECER SOMENTE COM CHECKBOX SELECIONADA <select required class="form-control" style="color:#999999;"><optgroup label="Serviço"><option value="12" selected>Motor</option><option value="13">Borracharia</option><option value="14">Elétrico</option><option value="15">Lavagem</option><option value="16">Estofado</option><option value="17">Lataria</option></optgroup></select>-->
      <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Cadastrar-se</button></div><a href="<%= new_user_session_path %>", class="already">Você já possui uma conta? Entre aqui!</a>
    <% end %>
  </div>
</div>
